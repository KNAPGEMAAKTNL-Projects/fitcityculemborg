---
import BaseLayout from '@layouts/BaseLayout.astro';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';
---

<BaseLayout
  title="Inschrijving Ontvangen - FitCity Culemborg"
  description="Je inschrijving is succesvol ontvangen. We nemen zo snel mogelijk contact met je op."
  showStickyBar={false}
>
  <section class="py-16 md:py-24 min-h-[70vh] flex items-center">
    <Container size="narrow">
      <div class="text-center">
        <!-- Success Icon -->
        <div class="success-icon">
          <svg
            class="w-20 h-20 mx-auto"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </div>

        <!-- Success Message -->
        <h1 class="heading-xl mt-8 mb-4">
          Inschrijving ontvangen!
        </h1>

        <p class="text-lg md:text-xl text-text-muted mb-8 max-w-2xl mx-auto">
          Bedankt voor je inschrijving bij FitCity Culemborg. We hebben je aanvraag ontvangen
          en nemen zo snel mogelijk contact met je op.
        </p>

        <!-- Next Steps -->
        <div class="next-steps">
          <h2 class="heading-md mb-6">Wat gebeurt er nu?</h2>

          <div class="steps-grid">
            <div class="step-card">
              <div class="step-number">1</div>
              <h3 class="step-title">Bevestiging per e-mail</h3>
              <p class="step-description">
                Je ontvangt binnen 24 uur een bevestigingsmail met alle details van je lidmaatschap.
              </p>
            </div>

            <div class="step-card">
              <div class="step-number">2</div>
              <h3 class="step-title">Inschrijfkosten betalen</h3>
              <p class="step-description">
                Kom langs op ons adres om de eenmalige inschrijfkosten van â‚¬17,00 te betalen
                en je ledenpas op te halen.
              </p>
            </div>

            <div class="step-card">
              <div class="step-number">3</div>
              <h3 class="step-title">Start met trainen</h3>
              <p class="step-description">
                Na betaling en activering van je pas kun je direct beginnen met trainen.
                Welkom bij FitCity!
              </p>
            </div>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="contact-box">
          <h3 class="heading-sm mb-4">Vragen?</h3>
          <p class="text-text-muted mb-4">
            Neem gerust contact met ons op via telefoon, e-mail of WhatsApp.
          </p>
          <div class="contact-methods">
            <a href="tel:+31646872274" class="contact-link">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              +31 6 4687 2274
            </a>
            <a href="mailto:info@fitcityculemborg.nl" class="contact-link">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              info@fitcityculemborg.nl
            </a>
            <a href="https://wa.me/31646872274" target="_blank" rel="noopener noreferrer" class="contact-link">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"></path>
              </svg>
              WhatsApp
            </a>
          </div>
        </div>

        <!-- Actions -->
        <div class="action-buttons">
          <Button href="/" variant="primary">
            Terug naar home
          </Button>
          <Button href="/contact" variant="ghost">
            Contact opnemen
          </Button>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>

<style>
  .success-icon {
    color: var(--color-success);
    animation: scaleIn 0.5s ease;
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .next-steps {
    background: var(--color-bg-secondary);
    border: 2px solid rgba(255, 255, 255, 0.08);
    padding: 2rem;
    margin: 3rem 0;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .step-card {
    text-align: center;
  }

  .step-number {
    width: 48px;
    height: 48px;
    background: var(--color-primary);
    color: var(--color-bg-main);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1rem;
  }

  .step-title {
    font-family: var(--font-display);
    font-size: 1.125rem;
    color: var(--color-text-main);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .step-description {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .contact-box {
    background: rgba(255, 227, 3, 0.05);
    border: 2px solid rgba(255, 227, 3, 0.2);
    padding: 2rem;
    margin: 2rem 0;
  }

  .contact-methods {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary);
    padding: 0.75rem 1.5rem;
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-primary);
    transition: all 0.3s ease;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .contact-link:hover {
    background: var(--color-primary);
    color: var(--color-bg-main);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0px var(--color-primary);
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .next-steps {
      padding: 1.5rem;
    }

    .steps-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-box {
      padding: 1.5rem;
    }

    .contact-methods {
      flex-direction: column;
    }

    .action-buttons {
      flex-direction: column;
      width: 100%;
    }
  }
</style>
