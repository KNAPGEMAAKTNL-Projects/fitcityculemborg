---
import BaseLayout from '@layouts/BaseLayout.astro';
import ContactForm from '@components/forms/ContactForm.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';

import { openingHours } from '@data/hours';
---

<BaseLayout
  title="Contact"
  description="Neem contact op met FitCity Culemborg. Houtweg 8, 4104 AB Culemborg. Tel: +31 6 4687 2274"
  showStickyBar={false}
>
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 md:px-6">
      <SectionHeading
        title="Contact"
        subtitle="Heb je vragen? Neem contact met ons op!"
      />

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Left: Map + Info -->
        <div class="space-y-8">
          <!-- Google Maps Embed -->
          <div>
            <h3 class="font-display text-xl mb-4">VIND ONS</h3>
            <div class="aspect-video w-full mb-4 bg-bg-secondary rounded-none overflow-hidden border-2 border-white/10">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2453.791!2d5.231422!3d51.957914!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c7a8e7e7e7e7e7%3A0x7e7e7e7e7e7e7e7!2sHoutweg%208%2C%204104%20AB%20Culemborg!5e0!3m2!1snl!2snl!4v1704380000000!5m2!1snl!2snl"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="FitCity Culemborg locatie op Google Maps"
              ></iframe>
            </div>

            <!-- Parking Info -->
            <div class="bg-primary/10 border-l-4 border-primary p-4 mb-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
                <div class="text-sm">
                  <p class="font-semibold text-text-main mb-1">Parkeren</p>
                  <p class="text-text-muted">Gratis parkeren direct voor de deur.</p>
                </div>
              </div>
            </div>
            <div class="card-industrial p-6 space-y-3 text-sm">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <p class="font-semibold">Adres</p>
                  <p class="text-text-muted">Houtweg 8<br />4104 AB Culemborg</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <p class="font-semibold">Telefoon</p>
                  <a href="tel:+31646872274" class="text-text-muted hover:text-primary transition-colors">
                    +31 6 4687 2274
                  </a>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="font-semibold">E-mail</p>
                  <a href="mailto:info@fitcityculemborg.nl" class="text-text-muted hover:text-primary transition-colors">
                    info@fitcityculemborg.nl
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Opening Hours -->
          <div class="card-industrial p-6">
            <h3 class="font-display text-xl mb-4">OPENINGSTIJDEN</h3>
            <dl class="space-y-3">
              {openingHours.map(({ day, hours }) => (
                <div class="flex justify-between items-center">
                  <dt class="text-text-muted">{day}</dt>
                  <dd class="font-semibold">{hours}</dd>
                </div>
              ))}
            </dl>
          </div>
        </div>

        <!-- Right: Contact Form -->
        <div>
          <h3 class="font-display text-xl mb-4">STUUR EEN BERICHT</h3>
          <div class="card-industrial p-6">
            <ContactForm
              accessKey="7b91d16e-72f3-4c0e-a8cd-b6b9231807da"
              redirectUrl="https://fitcityculemborg.nl/success"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
