---
interface Props {
  variant?: 'success' | 'error' | 'warning';
  text: string;
}

const { variant = 'success', text } = Astro.props;

const variantClasses = {
  success: 'bg-success/20 text-success',
  error: 'bg-red-500/20 text-red-500',
  warning: 'bg-yellow-500/20 text-yellow-500'
};

const classes = `inline-flex items-center gap-2 px-3 py-1 text-xs font-bold uppercase rounded-none ${variantClasses[variant]}`;
---

<span class={classes}>
  <slot />
  {text}
</span>
